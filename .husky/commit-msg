# Validate commit message format
# Format: type(scope): subject
# Example: feat(client): add login page

commit_msg=$(cat "$1")

# Check if commit message follows conventional commits
if ! echo "$commit_msg" | grep -qE "^(feat|fix|docs|style|refactor|perf|test|chore|ci|build|revert)(\(.+\))?: .{1,}$"; then
    echo "❌ Invalid commit message format!"
    echo ""
    echo "Commit message must follow: type(scope): subject"
    echo ""
    echo "Types: feat, fix, docs, style, refactor, perf, test, chore, ci, build, revert"
    echo "Example: feat(client): add user authentication"
    echo "Example: fix(server): resolve database connection issue"
    exit 1
fi

echo "✅ Commit message format is valid"