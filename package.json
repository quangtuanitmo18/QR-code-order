{
  "name": "qr-order-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "QR Order Management System",
  "scripts": {
    "prepare": "husky",
    "client:dev": "cd client && npm run dev",
    "server:dev": "cd server && npm run dev",
    "client:build": "cd client && npm run build",
    "server:build": "cd server && npm run build",
    "client:lint": "cd client && npm run lint",
    "server:lint": "cd server && npm run lint",
    "client:prettier": "cd client && npm run prettier:fix",
    "server:prettier": "cd server && npm run prettier:fix"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "client/**/*.{ts,tsx,js,jsx}": [
      "cd client && npm run prettier:fix",
      "cd client && npm run lint"
    ],
    "server/**/*.{ts,js}": [
      "cd server && npm run prettier:fix",
      "cd server && npm run lint"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}