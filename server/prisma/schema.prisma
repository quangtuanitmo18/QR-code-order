generator dbml {
  provider = "prisma-dbml-generator"
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id                   Int                       @id @default(autoincrement())
  name                 String
  email                String                    @unique
  password             String
  avatar               String?
  role                 String                    @default("Employee")
  ownerId              Int?
  createdAt            DateTime                  @default(now())
  updatedAt            DateTime                  @updatedAt
  owner                Account?                  @relation("OwnerEmployee", fields: [ownerId], references: [id], onUpdate: NoAction)
  employees            Account[]                 @relation("OwnerEmployee")
  orders               Order[]
  payments             Payment[]
  refreshToken         RefreshToken[]
  sockets              Socket?
  approvedReviews      Review[]                  @relation("ReviewApprover")
  repliedReviews       Review[]                  @relation("ReviewReplier")
  blogPosts            BlogPost[]
  createdEvents        CalendarEvent[]           @relation("EventCreator")
  eventAssignments     CalendarEventAssignment[] @relation("EventAssignment")
  notifications        CalendarNotification[]    @relation("UserNotifications")
  createdCalendarTypes CalendarType[]            @relation("CalendarTypeCreator")
  coupons              Coupon[]                  @relation("CouponCreator")
  employeeSpins        EmployeeSpin[]            @relation("EmployeeSpins")
  adminCreatedSpins    EmployeeSpin[]            @relation("AdminCreatedSpins")
  createdSpinEvents    SpinEvent[]               @relation("CreatedSpinEvents")
}

model Dish {
  id            Int            @id @default(autoincrement())
  name          String
  price         Int
  description   String
  image         String
  status        String         @default("Available")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  dishSnapshots DishSnapshot[]
}

model DishSnapshot {
  id          Int         @id @default(autoincrement())
  name        String
  price       Int
  description String
  image       String
  status      String      @default("Available")
  dishId      Int?
  updatedAt   DateTime    @updatedAt
  createdAt   DateTime    @default(now())
  dish        Dish?       @relation(fields: [dishId], references: [id], onUpdate: NoAction)
  orderItems  OrderItem[]
}

model Table {
  number    Int      @id @default(autoincrement())
  capacity  Int
  status    String   @default("Available")
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  guests    Guest[]
  orders    Order[]
}

model Order {
  id             Int           @id @default(autoincrement())
  guestId        Int?
  tableNumber    Int?
  totalAmount    Int           @default(0)
  orderHandlerId Int?
  status         String        @default("Pending")
  paymentId      Int?
  couponId       Int?
  discountAmount Int?          @default(0)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  payment        Payment?      @relation(fields: [paymentId], references: [id], onUpdate: NoAction)
  orderHandler   Account?      @relation(fields: [orderHandlerId], references: [id], onUpdate: NoAction)
  table          Table?        @relation(fields: [tableNumber], references: [number], onUpdate: NoAction)
  guest          Guest?        @relation(fields: [guestId], references: [id], onUpdate: NoAction)
  coupon         Coupon?       @relation(fields: [couponId], references: [id], onUpdate: NoAction)
  items          OrderItem[]
  couponUsages   CouponUsage[]
}

model OrderItem {
  id             Int          @id @default(autoincrement())
  orderId        Int
  dishSnapshotId Int
  quantity       Int
  unitPrice      Int
  totalPrice     Int
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  order          Order        @relation(fields: [orderId], references: [id], onDelete: Cascade)
  dishSnapshot   DishSnapshot @relation(fields: [dishSnapshotId], references: [id], onUpdate: NoAction)
}

model RefreshToken {
  token     String   @id
  accountId Int
  expiresAt DateTime
  createdAt DateTime @default(now())
  account   Account  @relation(fields: [accountId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model Guest {
  id                    Int           @id @default(autoincrement())
  name                  String
  tableNumber           Int?
  refreshToken          String?
  refreshTokenExpiresAt DateTime?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  table                 Table?        @relation(fields: [tableNumber], references: [number], onUpdate: NoAction)
  orders                Order[]
  payments              Payment[]
  sockets               Socket?
  reviews               Review[]
  couponUsages          CouponUsage[]
}

model Payment {
  id                    Int           @id @default(autoincrement())
  guestId               Int?
  tableNumber           Int?
  amount                Int
  paymentMethod         String
  status                String        @default("Pending")
  transactionRef        String        @unique
  externalTransactionId String?
  externalCustomerId    String?
  externalSessionId     String?
  paymentUrl            String?
  returnUrl             String?
  ipAddress             String?
  responseCode          String?
  responseMessage       String?
  bankCode              String?
  cardType              String?
  paymentIntentStatus   String?
  last4Digits           String?
  cardBrand             String?
  currency              String?       @default("VND")
  metadata              String?
  description           String?
  note                  String?
  paymentHandlerId      Int?
  couponId              Int?
  discountAmount        Int?          @default(0)
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  paidAt                DateTime?
  orders                Order[]
  paymentHandler        Account?      @relation(fields: [paymentHandlerId], references: [id], onUpdate: NoAction)
  guest                 Guest?        @relation(fields: [guestId], references: [id], onUpdate: NoAction)
  coupon                Coupon?       @relation(fields: [couponId], references: [id], onUpdate: NoAction)
  couponUsages          CouponUsage[]
}

model Socket {
  socketId  String   @id
  accountId Int?     @unique
  guestId   Int?     @unique
  guest     Guest?   @relation(fields: [guestId], references: [id], onUpdate: NoAction)
  account   Account? @relation(fields: [accountId], references: [id], onUpdate: NoAction)
}

model Coupon {
  id                Int      @id @default(autoincrement())
  code              String   @unique
  discountType      String // PERCENTAGE | FIXED_AMOUNT
  discountValue     Int
  minOrderAmount    Int?
  applicableDishIds String? // JSON array of dish IDs, null = all dishes
  maxTotalUsage     Int?
  maxUsagePerGuest  Int?
  usageCount        Int      @default(0)
  startDate         DateTime
  endDate           DateTime
  status            String   @default("ACTIVE") // ACTIVE | EXPIRED | DISABLED
  createdById       Int
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  createdBy Account       @relation("CouponCreator", fields: [createdById], references: [id], onUpdate: NoAction)
  usages    CouponUsage[]
  orders    Order[]
  payments  Payment[]

  @@index([code])
  @@index([status, startDate, endDate])
}

model CouponUsage {
  id             Int      @id @default(autoincrement())
  couponId       Int
  guestId        Int?
  orderId        Int?
  paymentId      Int?
  discountAmount Int
  usedAt         DateTime @default(now())

  coupon  Coupon   @relation(fields: [couponId], references: [id], onDelete: Cascade)
  guest   Guest?   @relation(fields: [guestId], references: [id], onUpdate: NoAction)
  order   Order?   @relation(fields: [orderId], references: [id], onUpdate: NoAction)
  payment Payment? @relation(fields: [paymentId], references: [id], onUpdate: NoAction)

  @@index([couponId])
  @@index([guestId, couponId])
}

model Review {
  id             Int       @id @default(autoincrement())
  guestId        Int
  overallRating  Int
  foodQuality    Int
  serviceQuality Int
  ambiance       Int
  priceValue     Int
  comment        String
  images         String?
  status         String    @default("HIDDEN") // HIDDEN, VISIBLE, DELETED (SQLite doesn't support enums)
  ipAddress      String?
  userAgent      String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  approvedAt     DateTime?
  approvedBy     Int?
  replyContent   String?
  repliedAt      DateTime?
  repliedBy      Int?
  guest          Guest     @relation(fields: [guestId], references: [id], onUpdate: NoAction)
  approver       Account?  @relation("ReviewApprover", fields: [approvedBy], references: [id], onUpdate: NoAction)
  replier        Account?  @relation("ReviewReplier", fields: [repliedBy], references: [id], onUpdate: NoAction)

  @@index([status, createdAt])
  @@index([overallRating])
  @@index([guestId])
}

model BlogPost {
  id            Int       @id @default(autoincrement())
  title         String // Required, 10-200 chars (validated in schema)
  slug          String    @unique // URL-friendly, unique, lowercase, hyphens only
  excerpt       String? // Optional, max 500 chars (validated in schema, auto-generated if not provided)
  content       String // Markdown format, required, min 100 chars
  featuredImage String? // URL to image (optional but recommended)
  status        String    @default("DRAFT") // DRAFT, PUBLISHED, ARCHIVED
  featured      Boolean   @default(false)
  viewCount     Int       @default(0)
  category      String? // Optional, free-form string (not enum), can create new categories
  tags          String? // JSON array of strings (max 10 tags, each max 30 chars), stored as JSON string
  authorId      Int // Foreign key to Account
  publishedAt   DateTime? // Set automatically when status changes from DRAFT to PUBLISHED
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  author Account @relation(fields: [authorId], references: [id], onUpdate: NoAction)

  @@index([slug])
  @@index([status, publishedAt])
  @@index([authorId])
  @@index([category])
  @@index([featured, publishedAt])
}

model CalendarType {
  id          Int      @id @default(autoincrement())
  name        String   @unique // Unique name like "work_shift", "meeting", etc.
  label       String // Display name like "Work Shifts", "Meetings"
  color       String   @default("bg-blue-500") // Color code for UI
  category    String   @default("personal") // "personal", "work", "shared"
  visible     Boolean  @default(true) // Whether this type is visible in calendar
  createdById Int // Owner who created this type
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  createdBy Account         @relation("CalendarTypeCreator", fields: [createdById], references: [id], onUpdate: NoAction)
  events    CalendarEvent[]

  @@index([category])
  @@index([visible])
  @@index([createdById])
}

model CalendarEvent {
  id            Int      @id @default(autoincrement())
  title         String
  description   String?
  typeId        Int // Foreign key to CalendarType
  startDate     DateTime
  endDate       DateTime
  allDay        Boolean  @default(false)
  location      String?
  color         String? // Optional, can inherit from CalendarType
  isRecurring   Boolean  @default(false)
  recurringRule String? // JSON string for recurrence pattern
  // Example: {"type":"weekly","interval":1,"dayOfWeek":1}
  // Example: {"type":"monthly","interval":1,"dayOfMonth":15}
  // Example: {"type":"daily","interval":1}
  createdById   Int // Owner/Admin who created the event
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  type          CalendarType              @relation(fields: [typeId], references: [id], onUpdate: NoAction)
  createdBy     Account                   @relation("EventCreator", fields: [createdById], references: [id], onUpdate: NoAction)
  assignments   CalendarEventAssignment[]
  notifications CalendarNotification[]

  @@index([startDate, endDate])
  @@index([typeId])
  @@index([createdById])
}

model CalendarEventAssignment {
  id         Int      @id @default(autoincrement())
  eventId    Int
  employeeId Int // Employee assigned to this event (for work shifts)
  createdAt  DateTime @default(now())

  event    CalendarEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)
  employee Account       @relation("EventAssignment", fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([eventId, employeeId])
  @@index([employeeId, eventId])
  @@index([eventId])
}

model CalendarNotification {
  id               Int       @id @default(autoincrement())
  eventId          Int
  userId           Int // User to notify
  notificationType String // "reminder", "new_event", "updated_event", "cancelled_event"
  message          String
  scheduledFor     DateTime // When to show this notification
  isRead           Boolean   @default(false)
  readAt           DateTime?
  createdAt        DateTime  @default(now())

  event CalendarEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  Account       @relation("UserNotifications", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead, scheduledFor])
  @@index([eventId])
  @@index([scheduledFor])
}

model SpinEvent {
  id          Int       @id @default(autoincrement())
  name        String // "Tết 2025", "Tháng 12", "Kỷ niệm công ty"
  description String?
  startDate   DateTime
  endDate     DateTime?
  isActive    Boolean   @default(true)
  createdById Int // Admin who created the event

  createdBy Account        @relation("CreatedSpinEvents", fields: [createdById], references: [id], onUpdate: NoAction)
  rewards   SpinReward[]
  spins     EmployeeSpin[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive, startDate, endDate])
}

model SpinReward {
  id              Int      @id @default(autoincrement())
  name            String // "Bonus 100k", "Free Meal", "Extra Break", etc.
  description     String? // Mô tả phần thưởng
  type            String // "BONUS" | "FREE_MEAL" | "EXTRA_BREAK" | "RECOGNITION" | "NOTHING"
  value           String? // JSON: {amount: 100000} hoặc {mealType: "lunch"} hoặc null
  probability     Float // 0.0 - 1.0 (weight, tổng tất cả = 1.0)
  color           String   @default("bg-blue-500") // Tailwind color class
  icon            String? // Icon name from lucide-react
  isActive        Boolean  @default(true)
  order           Int      @default(0) // Thứ tự hiển thị trên vòng quay
  maxQuantity     Int? // NULL = unlimited, số > 0 = có hạn
  currentQuantity Int      @default(0) // Số lượng đã phát (tăng khi spin trúng)
  version         Int      @default(0) // Optimistic locking version
  eventId         Int // Foreign key to SpinEvent
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  event SpinEvent      @relation(fields: [eventId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  spins EmployeeSpin[]

  @@index([isActive, order])
  @@index([isActive, currentQuantity, maxQuantity]) // For availability check
  @@index([eventId, isActive])
}

model EmployeeSpin {
  id          Int       @id @default(autoincrement())
  employeeId  Int // Account ID (Employee role)
  rewardId    Int? // Optional: null until spin is executed
  eventId     Int? // Optional: track which event this spin belongs to
  status      String    @default("PENDING") // "PENDING" | "CLAIMED" | "EXPIRED"
  claimedAt   DateTime?
  expiredAt   DateTime? // Optional expiration date
  spinDate    DateTime  @default(now())
  notes       String? // Admin notes when granting spin
  createdById Int? // Admin ID who granted this spin

  employee  Account     @relation("EmployeeSpins", fields: [employeeId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  reward    SpinReward? @relation(fields: [rewardId], references: [id], onUpdate: NoAction)
  event     SpinEvent?  @relation(fields: [eventId], references: [id], onUpdate: NoAction)
  createdBy Account?    @relation("AdminCreatedSpins", fields: [createdById], references: [id], onUpdate: NoAction)

  @@index([employeeId, spinDate])
  @@index([status, expiredAt])
  @@index([createdById])
  @@index([eventId])
}
